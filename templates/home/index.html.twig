{% extends 'base.html.twig' %}

{% block title %}Pokerstats{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    <div class="row">
        <div class="d-flex .align-content-center"><h1>PokerStats</h1></div>
    </div>
    <div class="row">
        <div class="col">
            <div><canvas id="tournament" width="400" height="200" data-url="{{ path('app_data_7_days_result') }}"></canvas></div>
        </div>
        <div class="col">
            <div><canvas id="cash" width="400" height="200" data-url="{{ path('app_data_7_days_money') }}"></canvas></div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div><canvas id="spinandgoresult" width="400" height="200" data-url="{{ path('app_data_spin_and_go_result') }}"></canvas></div>
        </div>
        <div class="col">
            <div><canvas id="spinandgomoney" width="400" height="200" data-url="{{ path('app_data_spin_and_go_money') }}"></canvas></div>
        </div>
    </div>
    <div class="row">
        {{ render(path('cards_stats')) }}
    </div>
</div>
{% endblock %}
