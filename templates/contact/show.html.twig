{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <h1>Contact</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ contact.pseudo }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ contact.age }}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{{ contact.sexe ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Valid</th>
                <td>{{ contact.valid ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ contact.ville }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ contact.comment }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_contact_index') }}">back to list</a>

    <a href="{{ path('app_contact_edit', {'id': contact.id}) }}">edit</a>

    {{ include('contact/_delete_form.html.twig') }}
{% endblock %}
